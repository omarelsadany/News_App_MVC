<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NEWS_APP" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/Green_news</item>
        <item name="colorPrimaryVariant">@color/Green_news_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black</item>
        <item name="colorSecondaryVariant">@color/black</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.NEWS_APP.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.NEWS_APP.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.NEWS_APP.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="Theme.News_App.AppBarOverlayy" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:background">@drawable/toolpar</item>
    </style>
    <style name="left_sided_card_view" parent="Widget.MaterialComponents.CardView">
          <item name="shapeAppearanceOverlay">@style/left_sided_card_view_corners</item>
    </style>
    <style name="left_sided_card_view_corners" parent="" >
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">25dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeTopLeft">25dp</item>
        <item name="cornerSizeBottomLeft">25dp</item>
    </style>
    <style name="right_sided_card_view" parent="Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/right_sided_card_view_corners</item>
    </style>
    <style name="right_sided_card_view_corners" parent="" >
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">25dp</item>
        <item name="cornerSizeBottomRight">25dp</item>
        <item name="cornerSizeTopLeft">25dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>
    <style name="SearchViewTheme" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColorHint">@color/Green_news_trans</item>
        <item name="android:editTextColor">@color/black</item>

    </style>
</resources>